@model Policy

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">Policy</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form asp-controller="Policy"
                      asp-action="SaveEdit"
                      id="frmDosageForm"
                      data-ajax-update="#divform"
                      data-ajax-begin="Begin"
                      data-ajax-success="OnSuccess"
                      data-ajax-complete="MessageDisappear"
                      data-ajax="true"
                      data-ajax-method="POST">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="ibox ">
                                <input asp-for="Id" type="hidden" />
                                <div class="ibox-content">
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label">Title<span class="text-danger"> * </span></label>
                                        <div class="col-lg-9">
                                            <input asp-for="Title" type="text" placeholder="Title" class="form-control" />
                                            <span asp-validation-for="Title" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label">Icon<span class="text-danger"> * </span></label>
                                        <div class="col-lg-9">
                                            <input asp-for="Icon" type="text" placeholder="Icon" class="form-control" />
                                            <span asp-validation-for="Icon" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label">Style<span class="text-danger"> * </span></label>
                                        <div class="col-lg-9">
                                            <input asp-for="Style" type="text" placeholder="Style" class="form-control" />
                                            <span asp-validation-for="Style" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label">Message<span class="text-danger"> * </span></label>
                                        <div class="col-lg-9">
                                            <input asp-for="Message" type="text" placeholder="Message" class="form-control" />
                                            <span asp-validation-for="Message" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label">Sort<span class="text-danger"> * </span></label>
                                        <div class="col-lg-9">
                                            <input asp-for="Sort" type="text" placeholder="Sort" class="form-control" />
                                            <span asp-validation-for="Sort" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-lg-offset-2 col-lg-10">
                                            <div class="i-checks"><label>Is Active</label>&nbsp;&nbsp;<input asp-for="IsActive" type="checkbox"><i></i></div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-lg-12 ">
                                            <button class="btn btn-sm btn-success float-right" type="submit" onclick="Save();">
                                                @(Model.Id > 0 ? "Update" : "Add")
                                            </button>
                                            <a data-ajax-update="#divform"
                                               data-ajax="true"
                                               data-ajax-method="GET"
                                               asp-controller="Policy" asp-action="List"
                                               class="btn btn-sm btn-default float-right mr-3">Back</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    var message = '@((string)TempData["Message"])';

    var MessageDisappear = function () {
         
        if (message != "") {
            Toast.fire({
                icon: 'error',
                title: message
            });
            message = '';
        }
        UnBlockUI();
    }
</script>