@model List<DistributorLicense>
@inject IUnitOfWork unitOfWork
@{
    List<LicenseForm> LicenseFormList = new LicenseFormBLL(unitOfWork).GetAllLicenseForm();
    ViewBag.Title = "Add License | Distributor Portal";
    var j = 0;
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Distributor License</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">License</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Distributor Information</h3>
                        </div>
                        <div class="card-body" style="padding: 10px 0px 0px 20px;">
                            <div class="row">
                                <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12 m-0 p-0">
                                    <h6>Name:</h6>
                                </div>
                                <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12 m-0 p-0">
                                    <span><strong>@SessionHelper.LoginUser.Distributor.DistributorName</strong></span>
                                </div>
                                <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12 m-0 p-0">
                                    <h6>City:</h6>
                                </div>
                                <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12 m-0 p-0">
                                    <span><strong>@SessionHelper.LoginUser.Distributor.City</strong></span>
                                </div>
                                <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12 m-0 p-0">
                                    <h6>Code:</h6>
                                </div>
                                <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12 m-0 p-0">
                                    <span><strong>@SessionHelper.LoginUser.Distributor.DistributorSAPCode</strong></span>
                                </div>
                                <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12 m-0 p-0">
                                    <h6>CNIC:</h6>
                                </div>
                                <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12 m-0 p-0">
                                    <span><strong>@SessionHelper.LoginUser.Distributor.CNIC</strong></span>
                                </div>
                                <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12 m-0 p-0">
                                    <h6>NTN:</h6>
                                </div>
                                <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12 m-0 p-0">
                                    <span><strong>@SessionHelper.LoginUser.Distributor.NTN</strong></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <form asp-controller="DistributorLicense"
                          asp-action="SaveEdit"
                          id="frmDistributorLicense"
                          data-ajax-begin="Begin"
                          data-ajax-success="OnSuccess"
                          data-ajax-complete="Complete"
                          data-ajax="true"
                          data-ajax-method="POST"
                          enctype="multipart/form-data">
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">License</h3>
                            </div>
                            <div class="card-body m-0 p-0">
                                <div class="table-responsive scrollmenu">
                                    <table id="example2" class="table table-bordered table-condensed table-hover table-striped" style="width: 125%;">
                                        <thead>
                                            <tr>
                                                <th class="text-center">License</th>
                                                <th class="text-center">Type</th>
                                                <th class="text-center">Request Type</th>
                                                <th class="text-center">License No</th>
                                                <th class="text-center">Issuing Authority</th>
                                                <th class="text-center">Form No</th>
                                                <th class="text-center">Attachment</th>
                                                <th class="text-center">Issue Date</th>
                                                <th class="text-center">Expiry</th>
                                                <th class="text-center">Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @for (int i = 0; i < Model.Count; i++)
                                            {
                                                <tr>
                                                    @if (Model[i].Expiry <= DateTime.Now.Date || Model[i].Status == LicenseStatus.Rejected || Model[i].Type == LicenseType.Challan)
                                                    {
                                                        <td>
                                                            <input type="hidden" asp-for="@Model[j].LicenseId" value="@Model[i].LicenseControl.Id" />
                                                            <input type="hidden" asp-for="@Model[j].Id" value="@Model[i].Id" />
                                                            @Model[i].LicenseControl.LicenseName
                                                        </td>
                                                        <td>
                                                            <select class="form-control select2" asp-for="@Model[j].Type" asp-items="Enum.GetValues(typeof(LicenseType)).Cast<LicenseType>().Select(x => new SelectListItem { Text = x.ToString(), Value = ((int)x).ToString() })">
                                                                <option readonly>--Select option--</option>
                                                            </select>
                                                            <span asp-validation-for="@Model[j].Type" class="text-danger"></span>
                                                        </td>
                                                        <td>
                                                            <select style="width: 170px;" class="form-control select2" asp-for="@Model[j].RequestType" asp-items="Enum.GetValues(typeof(LicenseRequestType)).Cast<LicenseRequestType>().Select(x => new SelectListItem { Text = x.ToString(), Value = ((int)x).ToString() })">
                                                                <option readonly>--Select option--</option>
                                                            </select>
                                                            <span asp-validation-for="@Model[j].RequestType" class="text-danger"></span>
                                                        </td>
                                                        <td>
                                                            <input type="text" asp-for="@Model[j].LicenseNo" value="@Model[j].LicenseNo" class="form-control" />
                                                        </td>
                                                        <td>
                                                            <input type="text" asp-for="@Model[j].IssuingAuthority" value="@Model[j].IssuingAuthority" class="form-control" />
                                                        </td>
                                                        <td>
                                                            <select class="form-control select2" asp-for="@Model[j].FormNoId" asp-items="@(new SelectList(LicenseFormList, "Id", "LicenseFormNo", Model[j].FormNoId))">
                                                                <option readonly>--Select option--</option>
                                                            </select>
                                                        </td>
                                                        <td>
                                                            <div class="custom-file">
                                                                <input type="file" asp-for="@Model[j].File" class="form-control custom-file-input" id="customFile" accept="application/pdf, image/*" />
                                                                <label class="custom-file-label" for="customFile">Choose file</label>
                                                                <span class="caption">
                                                                    <a asp-action="GetFile" asp-controller="Home" asp-route-filepath="@(!string.IsNullOrEmpty(Model[j].Attachment) ? Model[j].Attachment : "")" target="_blank">@(Model[j].Attachment != null ? Model[j].Attachment.Split('_')[1] : "")</a>
                                                                </span>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="input-group date" data-target-input="nearest">
                                                                <input type="text" asp-for="@Model[j].IssueDate" readonly="readonly" value="@(Model[j].Id == 0 ? DateTime.Now.ToString("dd/MMM/yyyy") : Model[j].IssueDate.ToString("dd/MMM/yyyy"))" id="IssueDate@(j)" class="form-control datepicker" />
                                                                <div class="input-group-append" data-target="#IssueDate@(j)" data-toggle="datepicker">
                                                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="input-group date" data-target-input="nearest">
                                                                <input type="text" asp-for="@Model[j].Expiry" readonly="readonly" value="@(Model[j].Id == 0 ? DateTime.Now.ToString("dd/MMM/yyyy") : Model[j].Expiry.ToString("dd/MMM/yyyy"))" id="Expiry@(j)" class="form-control datepicker" />
                                                                <div class="input-group-append" data-target="#Expiry@(j)" data-toggle="datepicker">
                                                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            @Model[i].Status
                                                        </td>
                                                        j++;
                                                    }
                                                    else
                                                    {
                                                        <td>
                                                            <input type="hidden" asp-for="@Model[j].Type" value="@Model[j].Type" />
                                                            <input type="hidden" asp-for="@Model[j].Status" value="@Model[j].Status" />
                                                            @Model[i].LicenseControl.LicenseName
                                                        </td>
                                                        <td>
                                                            @Model[i].Type
                                                        </td>
                                                        <td>
                                                            @Model[i].RequestType
                                                        </td>
                                                        <td>
                                                            @Model[i].LicenseNo
                                                        </td>
                                                        <td>
                                                            @Model[i].IssuingAuthority
                                                        </td>
                                                        <td>
                                                            @Model[i].FormNoId
                                                        </td>
                                                        <td>
                                                            <a asp-action="GetFile" asp-controller="Home" asp-route-filepath="@(@Model[i].Attachment != null ? @Model[i].Attachment : "")" target="_blank">@(@Model[i].Attachment != null ? @Model[i].Attachment.Split('_')[1] : "")</a>
                                                        </td>
                                                        <td>
                                                            @Model[i].IssueDate.ToShortDateString()
                                                        </td>
                                                        <td>
                                                            @Model[i].Expiry.ToShortDateString()
                                                        </td>
                                                        <td>
                                                            @Model[i].Status
                                                        </td>
                                                        j++;
                                                    }
                                                </tr>
                                            }
                                            <tr>
                                                <td colspan="10"><button class="btn btn-info fa-pull-right" type="submit">Save</button></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">License History</h3>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive-sm">
                                <table id="example1" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th class="text-center">License</th>
                                            <th class="text-center">Type</th>
                                            <th class="text-center">Request Type</th>
                                            <th class="text-center">Attachment</th>
                                            <th class="text-center">Issue Date</th>
                                            <th class="text-center">Expiry</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @if (ViewBag.distributorLicensesHistory.Count > 0)
                                        {
                                            @foreach (var item in ViewBag.distributorLicensesHistory)
                                            {
                                                <tr>
                                                    <td>
                                                        @(item.LicenseControl is null ? "" : @item.LicenseControl.LicenseName)
                                                    </td>
                                                    <td>
                                                        @item.Type
                                                    </td>
                                                    <td>
                                                        @item.RequestType
                                                    </td>
                                                    <td>
                                                        <a asp-action="GetFile" asp-controller="Home" asp-route-filepath="@(item.Attachment != null ?  item.Attachment : "")" target="_blank">@(item.Attachment != null ? item.Attachment.Split('_')[1] : "")</a>
                                                    </td>
                                                    <td>
                                                        @item.IssueDate.ToShortDateString()
                                                    </td>
                                                    <td>
                                                        @item.Expiry.ToShortDateString()
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td class="text-center" colspan="6">Data not available.</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script>
    $('.custom-file-input').on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).next('.custom-file-label').html(fileName);
    });

    $(document).ready(function () {

        $('.select2').select2();

        $('body').on('keyup', '#Amount', function () {
            $('#AmountInWords').html(inWords($('#Amount').val()));
        });

        $('body').on('change', '#ddlCompany', function () {

            var ddlCompany = $('#ddlCompany :selected');
            var text = $(ddlCompany).text();
            var value = $(ddlCompany).val();
            var params = {
                ComplaintCategoryId: (value === undefined || value == "" || value == null || value.length <= 0 ? 0 : value)
            }
            $(".ddlDepostitorBank option").remove();
            var ddlDepostitorBank = $(".ddlDepostitorBank");
            bindDropDownList(ddlDepostitorBank, "/Bank/DropDownBankList", params, "0");
            $('.ddlDepostitorBank').change();

            $(".ddlCompanyBank option").remove();
            var ddlCompanyBank = $(".ddlCompanyBank");
            bindDropDownList(ddlCompanyBank, "/Bank/DropDownBankList", params, "0");
            $('.ddlCompanyBank').change();
        });

        $('body').on('change', '.ddlDepostitorBank', function () {
            $.ajax({
                type: "GET",
                url: "/Bank/GetBranchCode",
                contentType: "application/json",
                dataType: "json",
                data: { Id: $(".ddlDepostitorBank").val() },
                async: false,
                success: function (response) {
                    $('#DepositorBankCode').val(response[0]);
                },
            });
        });

        $('body').on('change', '.ddlCompanyBank', function () {
            $.ajax({
                type: "GET",
                url: "/Bank/GetBranchCode",
                contentType: "application/json",
                dataType: "json",
                data: { Id: $(".ddlCompanyBank").val() },
                async: false,
                success: function (response) {
                    $('#CompanyBankCode').val(response[0]);
                },
            });
        });

    });
    $(document).ready(function () {

        $("#example1").DataTable({
            "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]],
            "responsive": true,
            "autoWidth": false,
            "order": []
        });
    });
</script>
