@model List<DistributorLicense>
@{ ViewBag.Title = "License | Distributor Portal"; }

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Distributor License</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">License</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <div id="divformPayment">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h2 class="card-title">Search</h2>
                            </div>
                            <form data-ajax-update="#divform"
                                  data-ajax="true"
                                  data-ajax-method="POST"
                                  asp-controller="DistributorLicense"
                                  asp-action="Search"
                                  id="frmPayment">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                            <div class="form-group">
                                                <label class="control-label">Distributor</label>
                                                <select name="Distributor" asp-items="@(new SelectList(ViewBag.Distributor, "Value", "Text"))" class="form-control select2">
                                                    <option value="">--Select option--</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                            <div class="form-group">
                                                <label class="control-label">License</label>
                                                <select name="License" asp-items="@(new SelectList(ViewBag.License, "Value", "Text"))" class="form-control select2">
                                                    <option value="">--Select option--</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                            <div class="form-group">
                                                <label class="col-form-label font-weight-bold" for="Search"></label>
                                                <button type="submit" name="Search" class="btn btn-block btn-info" value="Search">
                                                    Search
                                                </button>
                                            </div>
                                        </div>
                                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                            <div class="form-group">
                                                <label class="col-form-label font-weight-bold" for="Clear"></label>
                                                <button type="submit" name="Clear" class="btn btn-block btn-secondary" value="Clear" id="btnClear">
                                                    Clear
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="content">
            <div class="container-fluid scrollmenu" id="divform">
                <partial name="List" model="Model" />
            </div>
        </section>
    </div>
</div>

<script>
    $('#btnClear').on('click', function () {

        $('.select2').val('');
        $('.select2').trigger('change');
        $('#frmHome').submit();
    });
</script>