@model OrderValueViewModel
@inject IUnitOfWork iUnitOfWork
@{
    var Company = new CompanyBLL(iUnitOfWork).GetAllCompany();
}

<style>
    .ordervalue > tbody > tr > td {
        text-align: center;
        vertical-align: middle;
        padding: 1px;
    }

    .ordervalue > thead > tr > th {
        text-align: center;
        vertical-align: middle;
        padding: 0;
    }

    .ordervalue > tr {
        padding: 0;
    }
</style>

<a asp-controller="Order"
   asp-action="UpdateOrderValue"
   id="frmUpdateOrderValue"
   data-ajax-update="#UpdateOrderValueId"
   data-ajax="true"
   data-ajax-complete="CalculateTotal"
   data-ajax-method="POST"
   style="display: none"></a>
<table id="example1" class="table table-bordered table-striped ordervalue" style="font-size: 13px; padding: 0;">
    <thead>
        <tr>
            <th>Values</th>
            <th>SAMI</th>
            <th>HealthTek</th>
            <th>PhyTek</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Html.LabelFor(e => e.Supplies0)</td>
            <td>@Convert.ToDecimal(Model.SAMISupplies0).ToString("#,##0.00")</td>
            <td>@Convert.ToDecimal(Model.HealthTekSupplies0).ToString("#,##0.00")</td>
            <td>@Convert.ToDecimal(Model.PhytekSupplies0).ToString("#,##0.00")</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(e => e.Supplies1)</td>
            <td>@Convert.ToDecimal(Model.SAMISupplies1).ToString("#,##0.00")</td>
