            <td>@Convert.ToDecimal(Model.HealthTekSupplies4).ToString("#,##0.00")</td>
            <td>@Convert.ToDecimal(Model.PhytekSupplies4).ToString("#,##0.00")</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(e => e.TotalOrderValues)</td>
            <td><span id="SAMITotalOrderValues">@Convert.ToDecimal(Model.SAMITotalOrderValues).ToString("#,##0.00")</span></td>
            <td><span id="HealthTekTotalOrderValues">@Convert.ToDecimal(Model.HealthTekTotalOrderValues).ToString("#,##0.00")</span></td>
            <td><span id="PhytekTotalOrderValues">@Convert.ToDecimal(Model.PhytekTotalOrderValues).ToString("#,##0.00")</span></td>
        </tr>
        <tr>
            <td>@Html.LabelFor(e => e.PendingOrderValues)</td>
