@model OrderValueViewModel
@inject IUnitOfWork iUnitOfWork
@{
    var Company = new CompanyBLL(iUnitOfWork).GetAllCompany();
}

<style>
    .ordervalue > tbody > tr > td {
        text-align: center;
        vertical-align: middle;
        padding: 1px;
    }

    .ordervalue > thead > tr > th {
        text-align: center;
        vertical-align: middle;
        padding: 0;
    }

    .ordervalue > tr {
        padding: 0;
        font-size: 11px
    }
</style>

<a asp-controller="Order"
   asp-action="UpdateOrderValue"
   id="frmUpdateOrderValue"
   data-ajax-update="#UpdateOrderValueId"
   data-ajax="true"
   data-ajax-complete="CalculateTotal"
   data-ajax-method="POST"
   style="display: none"></a>
<table id="example1" class="table table-bordered table-striped ordervalue" style="font-size: 13px; padding: 0;">
    <thead>
        <tr>
            <th>Values</th>
            <th>SAMI</th>
            <th>HealthTek</th>
            <th>PhyTek</th>
        </tr>
    </thead>
    <tbody style="font-size: 11px">
        <tr>
            <td>@Html.LabelFor(e => e.Supplies0)</td>
            <td>@Convert.ToDecimal(Model.SAMISupplies0).ToString("#,##0.00")</td>
            <td>@Convert.ToDecimal(Model.HealthTekSupplies0).ToString("#,##0.00")</td>
            <td>@Convert.ToDecimal(Model.PhytekSupplies0).ToString("#,##0.00")</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(e => e.Supplies1)</td>
            <td>@Convert.ToDecimal(Model.SAMISupplies1).ToString("#,##0.00")</td>
            <td>@Convert.ToDecimal(Model.HealthTekSupplies1).ToString("#,##0.00")</td>
            <td>@Convert.ToDecimal(Model.PhytekSupplies1).ToString("#,##0.00")</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(e => e.Supplies4)</td>
            <td>@Convert.ToDecimal(Model.SAMISupplies4).ToString("#,##0.00")</td>
            <td>@Convert.ToDecimal(Model.HealthTekSupplies4).ToString("#,##0.00")</td>
            <td>@Convert.ToDecimal(Model.PhytekSupplies4).ToString("#,##0.00")</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(e => e.TotalOrderValues)</td>
            <td>
                <span>@Convert.ToDecimal(Model.SAMITotalOrderValues).ToString("#,##0.00")</span>
                <input type="hidden" value="@Model.SAMITotalOrderValues" id="SAMITotalOrderValues" />
            </td>
            <td>
                <span>@Convert.ToDecimal(Model.HealthTekTotalOrderValues).ToString("#,##0.00")</span>
                <input type="hidden" value="@Model.HealthTekTotalOrderValues" id="HealthTekTotalOrderValues" />
            </td>
            <td>
                <span>@Convert.ToDecimal(Model.PhytekTotalOrderValues).ToString("#,##0.00")</span>
                <input type="hidden" value="@Model.PhytekTotalOrderValues" id="PhytekTotalOrderValues" />
            </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(e => e.TotalUnapprovedOrderValues)</td>
            <td><span>@Convert.ToDecimal(Model.SAMITotalUnapprovedOrderValues).ToString("#,##0.00")</span></td>
            <td><span>@Convert.ToDecimal(Model.HealthTekTotalUnapprovedOrderValues).ToString("#,##0.00")</span></td>
            <td><span>@Convert.ToDecimal(Model.PhytekTotalUnapprovedOrderValues).ToString("#,##0.00")</span></td>
        </tr>
        <tr>
            <td>@Html.LabelFor(e => e.PendingOrderValues)</td>
            <td>@Convert.ToDecimal(Model.SAMIPendingOrderValues).ToString("#,##0.00")</td>
            <td>@Convert.ToDecimal(Model.HealthTekPendingOrderValues).ToString("#,##0.00")</td>
            <td>@Convert.ToDecimal(Model.PhytekPendingOrderValues).ToString("#,##0.00")</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(e => e.CurrentBalance)</td>
            <td>@Convert.ToDecimal(Model.SAMICurrentBalance).ToString("#,##0.00")</td>
            <td>@Convert.ToDecimal(Model.HealthTekCurrentBalance).ToString("#,##0.00")</td>
            <td>@Convert.ToDecimal(Model.PhytekCurrentBalance).ToString("#,##0.00")</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(e => e.UnConfirmedPayment)</td>
            <td>@Convert.ToDecimal(Model.SAMIUnConfirmedPayment).ToString("#,##0.00")</td>
            <td>@Convert.ToDecimal(Model.HealthTekUnConfirmedPayment).ToString("#,##0.00")</td>
            <td>@Convert.ToDecimal(Model.PhytekUnConfirmedPayment).ToString("#,##0.00")</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(e => e.NetPayable)</td>
            <td>@Convert.ToDecimal(Model.SAMINetPayable).ToString("#,##0.00")</td>
            <td>@Convert.ToDecimal(Model.HealthTekNetPayable).ToString("#,##0.00")</td>
            <td>@Convert.ToDecimal(Model.PhytekNetPayable).ToString("#,##0.00")</td>
        </tr>
    </tbody>
</table>

<script>

    $(document).ready(function () {

        CalculateTotalOrderValue();
    });

    function CalculateTotalOrderValue() {

        var sami = $('#SAMITotalOrderValues').val();
        var HealthTek = $('#HealthTekTotalOrderValues').val();
        var Phytek = $('#PhytekTotalOrderValues').val();
        var total = parseFloat(sami) + parseFloat(HealthTek) + parseFloat(Phytek);
        $('#TotalValue').text(parseFloat(total).toLocaleString(window.document.documentElement.lang));
    }
</script>
