@model OrderMaster
@inject IUnitOfWork iUnitOfWork
@{
    var product = new ProductDetailBLL(iUnitOfWork).DropDownProductList();
    ViewData["Title"] = "AddDetail";
}


<style type="text/css">
    .select2-container .select2-selection--single {
        box-sizing: border-box;
        cursor: pointer;
        display: block;
        height: 40px;
        user-select: none;
        -webkit-user-select: none;
    }

    .card-header {
        padding: 5px 15px 0px 15px
    }
</style>


<!-- Main content -->
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">

            <div class="row">
                <div class="col-md-12">
                    <form asp-controller="Order"
                          asp-action="SaveEdit"
                          id="frmOrderMaster"
                          data-ajax-begin="LaddaBegin"
                          data-ajax-success="OnSuccess"
                          data-ajax-complete="Complete"
                          data-ajax="true"
                          data-ajax-method="POST"
                          enctype="multipart/form-data">
                        <input asp-for="Id" type="hidden" />
                        <div class="row">
                            <div class="col-6">
                                <div class="card card-primary h-90">
                                    <div class="card-header">
                                        <h3 class="card-title">Distributor Information</h3>
                                        <div class="card-tools">
                                            <button type="button" class="btn btn-tool" data-card-widget="maximize"><i class="fas fa-expand"></i></button>
                                            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                                        </div>
                                    </div>
                                    <div class="card-body" style="padding:10px;">
                                        <div class="form-group" disabled>
                                            <div class="row">
                                                <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                    <h6>Name:</h6>
                                                </div>
                                                <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
                                                    <span><strong>@Model.Distributor.DistributorName</strong></span>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                    <h6>City:</h6>
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                    <span><strong>@Model.Distributor.City</strong></span>
                                                </div>

                                                <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                    <h6>Code:</h6>
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                    <span><strong>@Model.Distributor.DistributorSAPCode</strong></span>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <label>Additional Information</label>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                                    <h6>Reference No</h6>
                                                    <input type="text" asp-for="ReferenceNo" id="ReferenceNo" class="form-control" />
                                                </div>
                                                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                                    <h6>Attachment</h6>
                                                    <div class="form-group">
                                                        <div class="custom-file">
                                                            <input type="file" asp-for="AttachmentFormFile" class="form-control custom-file-input" id="customFile" accept="application/msword, application/vnd.openxmlformats-officedocument.wordprocessingml.document, application/pdf, image/*" />
                                                            <span asp-validation-for="AttachmentFormFile" class="text-danger"></span> <label class="custom-file-label" for="customFile">Choose file</label>
                                                        </div>
                                                    </div>
                                                    <span class="caption">
                                                        <a asp-action="GetFile" asp-controller="Home" asp-route-filepath="@(Model != null & !string.IsNullOrEmpty(Model.Attachment) ? Model.Attachment.Split('_')[1] : "")" target="_blank">@(Model != null & !string.IsNullOrEmpty(Model.Attachment) ? Model.Attachment.Split('_')[1] : "")</a>
                                                    </span>
                                                </div>
                                                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                                    <h6>Remarks</h6>
                                                    <input type="text" asp-for="Remarks" id="Remarks" class="form-control" />
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                    <label style="margin-top: 15px;">Total Value of Order:&nbsp;&nbsp;&nbsp; </label><strong><span id="TotalValue"></span></strong>
                                                </div>

                                                <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 mt-2">
                                                    <button type="button" onclick="return SubmitForm();" name="btnSubmit" value="@SubmitStatus.OrderNow" id="btnOrderNow" class="ladda-button btn btn-success float-right">
                                                        Order Now
                                                    </button>
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 mt-2">
                                                    <button type="submit" name="btnSubmit" value="@SubmitStatus.Draft" class="ladda-button btn btn-primary float-right" id="btnDraft">
                                                        Draft
                                                    </button>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-6">
                                <div class="card card-primary h-90">
                                    <div class="card-header">
                                        <h3 class="card-title">Order Values</h3>
                                        <div class="card-tools">
                                            <button type="button" class="btn btn-tool" data-card-widget="maximize"><i class="fas fa-expand"></i></button>
                                            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                                        </div>
                                    </div>
                                    <div class="card-body p-0" id="UpdateOrderValueId">
                                        <partial name="OrderValue" model="Model.OrderValueViewModel" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="row">
                        <div class="col-12">
                            <div class="card card-primary">
                                <div class="card-header">
                                    <h3 class="card-title">Add Products</h3>
                                </div>
                                <div class="card-body">
                                    <form asp-controller="Order"
                                          asp-action="AddProduct"
                                          id="frmOrderDetails"
                                          data-ajax="true"
                                          data-ajax-success="GetResponse"
                                          data-ajax-complete="UpdateOrderValue"
                                          data-ajax-method="POST">
                                        <div class="form-group row">
                                            <div class="col-lg-1 col-md-3 col-sm-12 col-xs-12">
                                                <h6>Product</h6>
                                            </div>
                                            <div class="col-lg-4 col-md-3 col-sm-12 col-xs-12">
                                                <select asp-items="@(new SelectList(product, "Value", "Text"))" class="js-example-basic-single" name="Product">
                                                    <option value="">--Select Product--</option>
                                                </select>
                                                <span id="ErrorProductName" class="text-danger">@ViewBag.Error</span>
                                            </div>
                                            <div class="col-lg-1 col-md-3 col-sm-12 col-xs-12">
                                                <h6>Quantity</h6>
                                            </div>
                                            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                <div class="col-lg-12">
                                                    <input type="number" name="Quantity" id="Quantity" placeholder="Enter Quantity" style="height: calc(2.25rem + -4px)" class="form-control" />
                                                    <span id="ErrorQuantity" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-1 col-md-1 col-sm-3 col-xs-3">
                                                <h4 class="col-lg-12 col-form-h4"></h4>
                                                <button type="submit" id="AddProducts" onclick="return CheckQuantity();" style="margin-top: -10px" class="ladda-button btn btn-info float-right">
                                                    Add
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                    <div class="scrollmenu" id="addToGrid">
                                        <partial name="AddToGrid" model="Model.productDetails" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
    <script>

        $('.custom-file-input').on("change", function () {
            $('#Attachment').val($(this).val().split("\\").pop());
        });

        var ProductArr = [];
        var response = [];
        function CheckQuantity() {
            $('#ErrorQuantity').empty();
            var qty = $('#Quantity').val();
            if (qty > 0) {
                return true;
            }
            else {
                $('#ErrorQuantity').text('Enter Valid Quantity');
                return false;
            }
        }

        function CalculateTotal() {
            debugger;
            var sami = $('#SAMITotalOrderValues').text();
            var HealthTek = $('#HealthTekTotalOrderValues').text();
            var Phytek = $('#PhytekTotalOrderValues').text();
            var total = parseInt(sami) + parseInt(HealthTek) + parseInt(Phytek);
            $('#TotalValue').text(total);
        }

        function SubmitForm() {
            debugger;
            Swal.fire({
                title: 'Are you sure?',
                text: "You want to place the order!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, Order Place!'
            }).then((result) => {
                if (result.value == true) {
                    $('#frmOrderMaster').submit();
                }
            })
            return false;
        }

        function LaddaBegin() {
            Ladda.create($("#btnOrderNow", this)[0]).start();
            Ladda.create($("#btnDraft", this)[0]).start();
        }
        $(document).ready(function () {
            $('.js-example-basic-single').select2();
            bsCustomFileInput.init();
        });

        function UpdateOrderValue() {
            $('#frmUpdateOrderValue').click();
        }

        function GetResponse(data) {
            debugger;
            if (data.data.HtmlString != null) {
                $("#addToGrid").html(data.data.HtmlString.Result);
            }
            if (data.data.Status) {
                Toast.fire({
                    icon: 'success',
                    title: data.data.Message
                })
            }
            else {
                Toast.fire({
                    icon: 'error',
                    title: data.data.Message
                })
            }
        }
    </script>

