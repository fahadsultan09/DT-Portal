@model IEnumerable<OrderMaster>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h2 class="card-title">Order List</h2>
                @if (SessionHelper.LoginUser.IsDistributor == true)
                {
                    <form asp-controller="Order"
                          asp-action="Add"
                          id="frmAdd"
                          method="GET">
                        <button type="submit" class="btn btn-info float-right" disabled="@(ViewBag.Expired == true ? "disabled" : null)">Add</button>
                    </form>
                }
            </div>
            <div class="card-body scrollmenu">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Order No</th>
                            <th>Distributor Name</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Action</th>
                        </tr>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@string.Format("{0:1000000000}", item.Id)</td>
                                <td>@item.Distributor.DistributorName</td>
                                <td>@Html.DisplayFor(e => item.Status)</td>
                                <td>@item.CreatedDate</td>
                                <td>
                                    <a asp-controller="Order" asp-action="OrderView" asp-route-DPID="@EncryptDecrypt.Encrypt(item.Id.ToString())" title="View" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    @if (item.Status == OrderStatus.Draft && SessionHelper.LoginUser.IsDistributor)
                                    {
                                        <a asp-controller="Order" asp-action="Add" asp-route-DPID="@EncryptDecrypt.Encrypt(item.Id.ToString())" title="Edit" class="btn btn-primary btn-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    }
                                    @if ((item.Status == OrderStatus.PendingApproval || item.Status == OrderStatus.PartiallyApproved || item.Status == OrderStatus.Onhold) && !SessionHelper.LoginUser.IsDistributor)
                                    {
                                        <a asp-controller="Order" asp-action="Approve" asp-route-DPID="@EncryptDecrypt.Encrypt(item.Id.ToString())" title="Approve" class="btn btn-success btn-sm">
                                            <i class="fas fa-thumbs-up"></i>
                                        </a>
                                    }
                                    @if (item.Status == OrderStatus.PendingApproval && SessionHelper.LoginUser.IsDistributor)
                                    {
                                        <a onclick="Cancel('@EncryptDecrypt.Encrypt(item.Id.ToString())');" title="Cancel" class="btn btn-warning btn-sm">
                                            <i class="fas fa-trash-restore"></i>
                                        </a>
                                    }
                                    @if (item.Status == OrderStatus.Draft && SessionHelper.LoginUser.IsDistributor)
                                    {
                                        <a onclick="DeleteOrder('@EncryptDecrypt.Encrypt(item.Id.ToString())');" title="Delete" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modal-intimation" aria-modal="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <h4 class="modal-title">License Expiry Intimation</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="expirecontent">

                </p>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {

        var days = '@ViewBag.Days';
        if (days != '') {
            if (parseInt(days) <= 0) {
                $('#expirecontent').text('Your license has been expired, please upload your renewal license.');
                $('#modal-intimation').modal('toggle');
                $('#modal-intimation').modal('show');
            } else if (parseInt(days) > 0) {
                $('#expirecontent').text('Your license will be expired within ' + days +' days, please upload your license before the expiry date, other wise you can not place the order.');
                $('#modal-intimation').modal('toggle');
                $('#modal-intimation').modal('show');

            }
        }
        $("#example1").DataTable({
            "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]],
            "responsive": true,
            "autoWidth": true,
            "order": [],
        });
    });

    function Cancel(Id) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You want to cancel this order!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, Cancel it!'
        }).then((result) => {
            debugger;
            if (result.value) {
                debugger;
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Cancel", "Order")',
                    data: { 'DPID': Id },
                    cache: false,
                    success: function (response) {
                        debugger;
                        Swal.fire('Saved!', response.Message, 'success')
                        setTimeout(function () {
                            window.location.reload();
                        }, 2000);
                    }
                });
            }
        })
    }

    function DeleteOrder(Id) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You want to delete this order!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, Delete it!'
        }).then((result) => {
            debugger;
            if (result.value) {
                debugger;
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("DeleteOrder", "Order")',
                    data: { 'DPID': Id },
                    cache: false,
                    success: function (response) {
                        debugger;
                        Swal.fire('Saved!', response.Message, 'success')
                        setTimeout(function () {
                            window.location.reload();
                        }, 2000);
                    }
                });
            }
        })
    }
</script>