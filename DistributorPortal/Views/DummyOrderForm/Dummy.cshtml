@model OrderViewModel
@{
    ViewData["Title"] = "Dummy";
    var m = new OrderValueViewModel();
    var id = 1;
}

<style>
    .ordervalue > tbody > tr > td {
        text-align: center;
        vertical-align: middle;
        padding: 1px;
    }

    .ordervalue > thead > tr > th {
        text-align: center;
        vertical-align: middle;
        padding: 0;
    }

    .ordervalue > tr {
        padding: 0;
        font-size: 11px
    }

    .card-header {
        padding: 5px 15px 0px 15px;
    }

    div.sticky {
        position: -webkit-sticky;
        position: sticky;
        top: 0;
        z-index: 1
    }
    body {
        overflow-x: hidden;
    }
    .col-lg-2{
        flex-basis: 10.6667%
