@model IEnumerable<ApplicationPage>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h2 class="card-title">Application Page List</h2>

                <form asp-controller="ApplicationPage"
                      asp-action="Add"
                      id="frmAdd"
                      data-ajax-update="#divform"
                      data-ajax="true"
                      data-ajax-method="GET"
                      method="GET">
                    @if (SessionHelper.LoginUser.IsDistributor == true)
                    {
                        <button type="submit" class="btn btn-info float-right">Add</button>
                    }
                </form>
            </div>

            <!-- /.card-header -->
            <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>S.No</th>
                            <th>Name</th>
                            <th>Module</th>
                            <th>Sort</th>
                            <th>Active</th>
                            <th>Show On Navigation</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.PageTitle</td>
                            <td>@item.ApplicationModule.ModuleName</td>
                            <td>@item.Sort</td>
                            <td>
                                @if (item.IsActive)
                                {<i class="fa fa-check text-navy"></i> }
                                else
                                {<i class="fa fa-times text-danger"></i>}
                            </td>
                            <td>
                                @if (item.IsShowOnNavigation)
                                {<i class="fa fa-check text-navy"></i> }
                                else
                                {<i class="fa fa-times text-danger"></i>}
                            </td>
                            <td>
                                <a data-ajax-update="#divform"
                                   data-ajax="true"
                                   data-ajax-method="GET"
                                   asp-controller="ApplicationPage" asp-action="Add" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <a onclick="Delete(this);" id="@item.Id" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
<script>

    $(document).ready(function () {

        $("#example1").DataTable({
            "responsive": true,
            "autoWidth": false,
        });
    });

    function Delete(e) {
        Swal.fire({
            title: "Are you sure you want to continue?",
            type: "warning",
            showCancelButton: true,
            confirmButtonColor: "#DD6B55",
            confirmButtonText: "Yes, delete it!",
            closeOnConfirm: true,
            showLoaderOnConfirm: true
        }).then((result) => {
            if (result.value) {
                $.post('@Url.Action("Delete", "ApplicationPage")/' + e.id, null, function (data) {
                    if (data) {
                        Toast.fire({ icon: 'success', title: '@NotificationMessage.DeletedSuccessfully' });
                        setTimeout(function () {
                            window.location.reload();
                        }, 1000);
                    } else {
                        Toast.fire({ icon: 'error', title: '@NotificationMessage.ErrorOccurred' });
                    }
                });
            }
        });
    }

</script>