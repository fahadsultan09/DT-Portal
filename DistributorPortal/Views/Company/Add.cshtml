@model Company

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">Company</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form asp-controller="Company"
                      asp-action="SaveEdit"
                      id="frmDosageForm"
                      data-ajax-update="#divform"
                      data-ajax-begin="Begin"
                      data-ajax-success="OnSuccess"
                      data-ajax-complete="MessageDisappear"
                      data-ajax="true"
                      data-ajax-method="POST"
                      autocomplete="off">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="ibox ">
                                <input asp-for="Id" type="hidden" />
                                <div class="ibox-content">
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label">Company Name<span class="text-danger"> * </span></label>
                                        <div class="col-lg-9">
                                            <input asp-for="CompanyName" type="text" placeholder="Company Name" class="form-control" />
                                            <span asp-validation-for="CompanyName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label">SAP Company Code<span class="text-danger"> * </span></label>
                                        <div class="col-lg-9">
                                            <input asp-for="SAPCompanyCode" type="text" maxlength="4" placeholder="SAP Company Code" class="form-control" />
                                            <span asp-validation-for="SAPCompanyCode" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label">Is Payment Allowed</label>
                                        <div class="col-lg-9">
                                            <div class="i-checks"><input asp-for="IsPaymentAllowed" type="checkbox"><i></i></div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label">Is Payment Allowed In SAP</label>
                                        <div class="col-lg-9">
                                            <div class="i-checks"><input asp-for="IsPaymentAllowedInSAP" type="checkbox"><i></i></div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label">Is Active</label>
                                        <div class="col-lg-9">
                                            <div class="i-checks"><input asp-for="IsActive" type="checkbox"><i></i></div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-lg-12 ">
                                            <button class="btn btn-sm btn-success float-right" type="submit" onclick="Save();">
                                                @(Model.Id > 0 ? "Update" : "Add")
                                            </button>
                                            <a data-ajax-update="#divform"
                                               data-ajax="true"
                                               data-ajax-method="GET"
                                               asp-controller="Company" asp-action="List"
                                               class="btn btn-sm btn-default float-right mr-3">Back</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    var message = '@((string)TempData["Message"])';

    var MessageDisappear = function (data) {

        if (message != "") {
            Toast.fire({
                icon: 'error',
                title: message
            });
            message = '';
        }
        UnBlockUI();
    }
</script>
