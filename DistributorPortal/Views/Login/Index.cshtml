@model Models.Application.User
@{
    Layout = null;
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Login ! SAMI Pharmaceuticals</title>
    <meta charset="utf-8" />
    <meta name="description" content="Login page example" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="stylesheet" href="~/lib/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <link href="~/lib/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.css" rel="stylesheet" />
    <link href="~/lib/plugins/toastr/toastr.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" />
    <script src="~/lib/plugins/jquery/jquery.js"></script>
    <!-- jquery unobtrusive -->
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <link href="~/Login/login-29cd7.css?v=7.1.5" rel="stylesheet" />
    <link href="~/Login/plugins.bundle9cd7.css?v=7.1.5" rel="stylesheet" />
    <link href="~/Login/prismjs.bundle9cd7.css?v=7.1.5" rel="stylesheet" />
    <link href="~/Login/style.bundle9cd7.css?v=7.1.5" rel="stylesheet" />
    <link rel="shortcut icon" href="~/Images/favicon.png" />
</head>
<body id="kt_body" class="header-fixed header-mobile-fixed header-bottom-enabled subheader-enabled page-loading">
    <div class="d-flex flex-column flex-root">
        <div class="login login-2 login-signin-on d-flex flex-column flex-lg-row flex-column-fluid bg-white" id="kt_login">
            <div class="login-aside order-2 order-lg-1 d-flex flex-row-auto position-relative overflow-hidden">
                <div class="d-flex flex-column-fluid flex-column justify-content-between py-9 px-7 py-lg-13 px-lg-35">
                    <div class="d-flex flex-column-fluid flex-column flex-center">
                        <a href="#" class="text-center pt-2">
                            <img src="~/Images/favicon.png" class="max-h-75px" alt="" />
                        </a>
                        <div class="login-form login-signin py-11">
                            <form class="form"
                                  asp-action="Index"
                                  asp-controller="Login"
                                  data-ajax-method="POST"
                                  data-ajax-begin="Begin"
                                  data-ajax-success="OnSuccess"
                                  data-ajax-complete="Complete"
                                  data-ajax="true"
                                  id="kt_login_signin_form">
                                <div class="text-center pb-8">
                                    <h2 class="font-weight-bolder text-dark font-size-h2 font-size-h1-lg">Sign In</h2>
                                </div>
                                <div class="form-group">
                                    <label class="font-size-h6 font-weight-bolder text-dark">User Id</label>
                                    <input class="form-control form-control-solid h-auto py-7 px-6 rounded-lg" type="text" asp-for="UserName" max="6" autocomplete="off" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div class="d-flex justify-content-between mt-n5">
                                        <label class="font-size-h6 font-weight-bolder text-dark pt-5">Password</label>
                                        <a href="javascript:;" class="text-primary font-size-h6 font-weight-bolder text-hover-primary pt-5" id="kt_login_forgot" data-toggle="modal" data-target="#modal-default">Forgot Password ?</a>
                                    </div>
                                    <input class="form-control form-control-solid h-auto py-7 px-6 rounded-lg" type="password" asp-for="Password" autocomplete="off" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="text-center pt-2">
                                    <button type="submit" class="btn btn-dark font-weight-bolder font-size-h6 px-8 py-4 my-3">
                                        <span id="Spinner" class="spinner-grow spinner-grow-sm"></span>
                                        Sign In
                                    </button>
                                </div>
                            </form>
                        </div>
                        <div class="modal fade" id="modal-default">
                            <div class="modal-dialog">
                                <form asp-controller="User"
                                      asp-action="ChangePassword"
                                      id="frmUser"
                                      data-ajax-begin="Begin"
                                      data-ajax-success="OnSuccess"
                                      data-ajax-complete="Complete"
                                      data-ajax="true"
                                      data-ajax-method="POST"
                                      method="post">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <div class="text-center pb-8">
                                                <h2 class="font-weight-bolder text-dark font-size-h2 font-size-h1-lg">Change Password</h2>
                                            </div>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="form-group">
                                                <input type="text" asp-for="Password" id="Password" class="form-control form-control-solid h-auto py-7 px-6 rounded-lg font-size-h6" placeholder="Password" autocomplete="off" />
                                                <span asp-validation-for="Password" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <input type="text" asp-for="ConfirmPassword" id="ConfirmPassword" class="form-control form-control-solid h-auto py-7 px-6 rounded-lg font-size-h6" placeholder="Confirm Password" autocomplete="off" />
                                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="modal-footer justify-content-between">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                            <button type="submit" value="Submit" name="button" class="btn btn-primary">Save</button>
                                        </div>
                                    </div>
                                </form>
                                <!-- /.modal-content -->
                            </div>
                            <!-- /.modal-dialog -->
                        </div>

                        <div class="login-form login-forgot pt-11">
                        </div>
                    </div>
                </div>
            </div>
            <div class="content order-1 order-lg-2 d-flex flex-column w-100 pb-0" style="background-color: #B1DCED;">
                <div class="d-flex flex-column justify-content-center text-center pt-lg-40 pt-md-5 pt-sm-5 px-lg-0 pt-5 px-7">
                    <h3 class="display4 font-weight-bolder my-7 text-dark" style="color: #986923;">SAMI Pharmaceuticals</h3>
                    <p class="font-weight-bolder font-size-h2-md font-size-lg text-dark opacity-70">
                        User Experience &amp; Interface Design, Product Strategy
                        <br />Web Application SaaS Solutions
                    </p>
                </div>
                <div class="content-img d-flex flex-row-fluid bgi-no-repeat bgi-position-y-bottom bgi-position-x-center" style="background-image: url(/Images/19241.jpg); background-size:contain"></div>
            </div>
        </div>
    </div>
    <script src="~/lib/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/plugins/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/lib/plugins/toastr/toastr.min.js"></script>
