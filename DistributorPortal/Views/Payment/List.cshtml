@model IEnumerable<PaymentMaster>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h2 class="card-title">Payment List</h2>
                <form asp-controller="Payment"
                      asp-action="Add"
                      id="frmAdd"
                      data-ajax-update="#divform"
                      data-ajax="true"
                      data-ajax-method="GET"
                      method="GET">
                    @if (SessionHelper.LoginUser.IsDistributor == true)
                    {
                        <button type="submit" class="btn btn-info float-right">Add</button>
                    }
                </form>
            </div>
            <div class="card-body scrollmenu">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            @*<th>S.No</th>*@
                            <th>Payment No</th>
                            <th>Distributor Name</th>
                            <th>Payment Mode</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                @*<td>@item.Id</td>*@
                                <td>@item.Id</td>
                                <td>@item.Distributor.DistributorName</td>
                                <td>@item.PaymentMode.PaymentName</td>
                                <td>@item.Amount</td>
                                <td>@item.Status</td>
                                <td>@item.CreatedDate</td>
                                <td>
                                    <a data-ajax-update="#divform"
                                       data-ajax="true"
                                       data-ajax-method="GET"
                                       asp-controller="Payment" asp-action="PaymentApproval" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>

        $(document).ready(function () {

            $("#example1").DataTable({
                "responsive": true,
                "autoWidth": false,
            });

        });

</script>