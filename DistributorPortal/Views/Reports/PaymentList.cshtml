@model IEnumerable<PaymentMaster>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h2 class="card-title">Payment List</h2>
            </div>
            <div class="card-body scrollmenu">
                <table id="example1" class="table table-striped table-hover" style="width:100%">
                    <thead>
                        <tr>
                            <th>Payment No</th>
                            @if (!SessionHelper.LoginUser.IsDistributor)
                            {
                                <th>Distributor Name</th>
                            }
                            <th>Company</th>
                            <th>Status</th>
                            <th>Payment Type</th>
                            <th>Amount</th>
                            <th>SAP Document No</th>
                            <th>SAP Fiscal Year</th>
                            <th>Payment By</th>
                            <th>Payment Date</th>
                            <th>Approved By</th>
                            <th>Approved Date</th>
                            <th>Rejected By</th>
                            <th>Rejected Date</th>
                            <th>Action</th>
                        </tr>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@string.Format("{0:1000000000}", item.Id)</td>
                                    @if (!SessionHelper.LoginUser.IsDistributor)
                                    {
                                        <td>@item.Distributor.DistributorName</td>
                                    }
                                    <td>@item.Company.CompanyName</td>
                                    <td>@Html.DisplayFor(x => item.Status)</td>
                                    <td>@item.PaymentMode.PaymentName</td>
                                    <td>@item.Amount</td>
                                    <td>@item.SAPDocumentNumber</td>
                                    <td>@item.SAPFiscalYear</td>
                                    <td>@item.CreatedName</td>
                                    <td>@item.CreatedDate</td>
                                    <td>@item.ApprovedName</td>
                                    <td>@item.ApprovedDate</td>
                                    <td>@item.RejectedName</td>
                                    <td>@item.RejectedDate</td>
                                    <td>
                                        <a asp-controller="Payment" asp-action="Add" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {

        $('[Id$=example1]').DataTable({
            "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]],
            "responsive": true,
            "autoWidth": false,
            "order": [],
        });

    });

</script>
