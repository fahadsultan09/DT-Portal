@model IEnumerable<OrderReturnDetail>

<div class="row">
    <div class="col-12 p-0" style="height: 300px;">
        <div class="card">
            <div class="card-body table-responsive p-0">
                <table class="table table-striped table-valign-middle">
                    <thead>
                        <tr>
                            <th colspan="6" style="text-align: center; vertical-align: middle; font-size:medium;">Order Return No: <span>@string.Format("{0:1000000000}", Model.FirstOrDefault().OrderReturnId)</span></th>
                        </tr>
                        <tr>

                            <th>Product Name</th>
                            <th>Ordered Quantity</th>
                            <th>Received Quantity</th>
                            <th>SAP Order Number</th>
                            <th>SAP Order Status</th>
                        </tr>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProductMaster.ProductName @item.ProductMaster.ProductDescription</td>
                                <td>@item.Quantity</td>
                                <td>@item.ReceivedQty</td>
                                <td>@item.ReturnOrderNumber</td>
                                <td>@Html.DisplayFor(x => item.ReturnOrderStatus)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>