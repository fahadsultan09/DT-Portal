@model IEnumerable<OrderDetail>

<div class="row">
    <div class="col-12 p-0" style="height: 300px;">
        <div class="card">
            <div class="card-body table-responsive p-0">
                <table class="table table-striped table-valign-middle">
                    <thead>
                        <tr>
                            <th colspan="6" style="text-align: center; vertical-align: middle; font-size:medium;">Order No: <span>@string.Format("{0:1000000000}", Model.FirstOrDefault().OrderId)</span></th>
                        </tr>
                        <tr>
                            <th>Product Name</th>
                            <th>Ordered Quantity</th>
                            <th>Approved Quantity</th>
                            <th>SAP Order Number</th>
                            <th>SAP Order Status</th>
                            <th>Status</th>
                        </tr>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProductMaster.ProductName</td>
                                <td>@item.Quantity</td>
                                <td>@item.ApprovedQuantity</td>
                                <td>@item.SAPOrderNumber</td>
                                <td>@Html.DisplayFor(e => item.OrderProductStatus)</td>
                                <td>
                                    @if (item.IsProductSelected)
                                    {
                                        <span class="badge badge-success">Approved</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">Not Approved</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>