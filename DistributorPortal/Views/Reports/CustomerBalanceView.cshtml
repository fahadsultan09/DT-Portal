@model IEnumerable<CustomerBalanceViewModel>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h2 class="card-title">Customer Balance List</h2>
            </div>
            <div class="card-body scrollmenu">
                <table id="example1" class="table table-striped table-hover" style="width:100%">
                    <thead>
                        <tr>
                            <th>Distributor Code</th>
                            <th>Distributor Name</th>
                            <th>City</th>
                            <th>Balance</th>
                            <th>Debit/Credit</th>
                        </tr>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.DistributorCode</td>
                                    <td>@item.DistributorName</td>
                                    <td>@item.City</td>
                                    <td>@item.Balance.ToString("#,##0.00")</td>
                                    <td>@item.DebitCredit</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">

    $(document).ready(function () {

        $('#example1').dataTable().fnDestroy();
        $("#example1").DataTable({
            "responsive": true,
            "autoWidth": false,
            "paging": false,
            "order": [[1, "asc"]]
        });
    });

</script>
