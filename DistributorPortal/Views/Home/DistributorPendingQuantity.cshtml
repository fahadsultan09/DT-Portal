@model IEnumerable<DistributorPendingQuantity>

<div class="card-body table-responsive p-0" style="height: 370px;">
    <table id="example1" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>S. No.</th>
                <th>Product Code</th>
                <th>Product Name</th>
                <th>Ordered Quantity</th>
                <th>Delivered Quantity</th>
                <th>Pending Quantity</th>
                <th>Rate</th>
                <th>Discount</th>
                <th>Pending Value</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td>@(i++)</td>
                        <td>@item.ProductCode</td>
                        <td>@item.ProductName</td>
                        <td>@item.OrderQuantity</td>
                        <td>@item.DispatchQuantity</td>
                        <td>@item.PendingQuantity</td>
                        <td>@item.Rate</td>
                        <td>@item.Discount</td>
                        <td>@item.PendingValue.ToString("#,##0.00")</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<script>

    $(document).ready(function () {

        $("#example1").DataTable({
            "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]],
            "responsive": true,
            "autoWidth": false,
            "order": [],
        });
    });

</script>
