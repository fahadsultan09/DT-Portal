@model IEnumerable<OrderReturnMaster>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h2 class="card-title">Order List</h2>
                @if (SessionHelper.LoginUser.IsDistributor == true)
                {
                    <a asp-action="Add"
                       asp-controller="OrderReturn"
                       class="btn btn-info float-right">Add</a>
                }
            </div>
            <div class="card-body scrollmenu">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Order No</th>
                            <th>Distributor Name</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Action</th>
                        </tr>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Distributor.DistributorName</td>
                                <td>@item.Status</td>
                                <td>@item.CreatedDate</td>
                                <td>
                                    <a asp-controller="OrderReturn" asp-action="View" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    @if (item.Status == OrderReturnStatus.Draft)
                                    {
                                        <a asp-controller="OrderReturn" asp-action="Add" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    }
                                    @if (item.Status == OrderReturnStatus.Submitted)
                                    {
                                        <a asp-controller="OrderReturn" asp-action="Approve" asp-route-id="@item.Id" class="btn btn-success btn-sm">
                                            <i class="fas fa-thumbs-up"></i>
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>

    $(document).ready(function () {

        $("#example1").DataTable({
            "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]],
            "responsive": true,
            "autoWidth": false,
            "order": [],
        });

    });

</script>